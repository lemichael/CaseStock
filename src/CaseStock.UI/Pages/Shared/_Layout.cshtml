<!DOCTYPE html>
<html>


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - CaseStock</title>

    <link rel="stylesheet" href="~/Styles/app.min.css" asp-append-version="true" />
</head>


<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/Media/logo.png" width="32" height="32" class="d-inline-block align-top" alt="CaseStock">
                <span class="name-case">Case</span>Stock
            </a>

            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-page="/Index">
                            <i class="fas fa-home"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Cases">
                            <i class="fas fa-layer-group"></i>
                            Cases
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Cases">
                            <i class="fas fa-users"></i>
                            Clients
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="nav-project-picker" 
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            <i class="fas fa-sitemap"></i>
                            Applicaria
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav-project-picker">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="nav-user"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            <div class="user-icon">ML</div>
                            Michael Le
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav-user">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="content">
        <main role="main">
            <div class="content-header">
                <h1>Ahoj svete</h1>
            </div>
            
            <div class="content-body">
                <partial name="_CookieConsentPartial" />
                @RenderBody()
            </div>
        </main>

        <aside class="sidebar">
            <nav>
                Sidebar
            </nav>
        </aside>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/app.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>


</html>
